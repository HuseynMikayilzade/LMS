@model UpdateLessonVm
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Update Lesson</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" required class="form-control">
                                <span asp-validation-for="Name" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tittle">Tittle</label>
                                <input asp-for="Tittle" required class="form-control">
                                <span asp-validation-for="Tittle" class="text-danger"> </span>
                            </div>
                            <div class="form-group" >
                                <label asp-for="SubjectId">Subject</label>
                                <select asp-for="SubjectId" asp-items="new SelectList(Model.Subjects,nameof(Subject.Id),nameof(Subject.Name))">
                                    <option selected disabled>Select one</option>
                                </select>
                                <span asp-validation-for="SubjectId" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Date">Date</label>
                                <input asp-for="Date" type="date" required class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")">

                                <span asp-validation-for="Date" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate">Start Time</label>
                                <input asp-for="StartDate" required class="form-control">
                                <span asp-validation-for="StartDate" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate">End Time</label>
                                <input asp-for="EndDate" required class="form-control">
                                <span asp-validation-for="EndDate" class="text-danger"> </span>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>