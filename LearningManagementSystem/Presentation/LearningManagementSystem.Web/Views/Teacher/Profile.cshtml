@using System.Security.Claims;
@model UpdateTeacherVm

<div class="content container-fluid">

    <div class="page-header">
        <div class="row">
            <div class="col">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">Teacher</li>
                    <li class="breadcrumb-item active">Profile</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="profile-header" style="background-image:url(/assets/img/Myprofilebg.jpg)">
                <div class="row align-items-center">
                    <div class="col-auto profile-image">
                        <a href="#">
                            <img class="rounded-circle" alt="User Image" src="~/assets/img/@Model.Image">
                        </a>
                    </div>
                    <div class="col ms-md-n2 profile-user-info">
                        <h4 class="user-name mb-0">@Model.Name @Model.Surname</h4>                      
                    </div>
                    <div class="col-auto profile-btn">
                        <a asp-action="edit" asp-controller="teacher" class="btn btn-primary">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
            <div class="profile-menu">
                <ul class="nav nav-tabs nav-tabs-solid">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#per_details_tab">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#password_tab">Password</a>
                    </li>
                </ul>
            </div>
            <div class="tab-content profile-tab-cont">

                <div class="tab-pane fade show active" id="per_details_tab">

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title d-flex justify-content-between">
                                        <span>Personal Details</span>
                                    </h5>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0 mb-sm-3">Name</p>
                                        <p class="col-sm-9">@Model.Name</p>
                                    </div>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0 mb-sm-3">Surname</p>
                                        <p class="col-sm-9">@Model.Surname</p>
                                    </div>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0 mb-sm-3">Date of Birth</p>
                                        <p class="col-sm-9">@Model.Birthday.ToString("dd/MM/yyyy")</p>

                                    </div>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0 mb-sm-3">Email</p>
                                        <p class="col-sm-9">@Model.Email</p>

                                    </div>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0 mb-sm-3">Mobile</p>
                                        <p class="col-sm-9">@Model.PhoneNumber</p>
                                    </div>
                                    <div class="row">
                                        <p class="col-sm-3 text-muted text-sm-end mb-0">Group(s)</p>
                                        <p class="col-sm-9 mb-0">
                                            @if (Model.Groups != null && Model.Groups.Any())
                                            {                                    
                                                @foreach (var group in Model.Groups)
                                                {
                                                    <span>@group.Name</span>@(group != Model.Groups.Last() ? ", " : "")
                                                }                                     
                                            }
                                            else
                                            {
                                                <span class="text-danger">Empty</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body">
                                   <h3>Descripton </h3>
                                    <div class="skill-tags">
                                       @Model.Description
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                @await Html.PartialAsync("_ResetPasswordPartialView",Model.ResetPasswordVm)
            </div>
        </div>
    </div>
</div>
