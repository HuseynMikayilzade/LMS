@using LearningManagementSystem.Application.ViewModels;

@model GroupItemVm

<style>
    .task-card {
        width: 100%; 
    }
</style>
<div class="content container-fluid">
    <div class="row">
        <div class="card bg-white">
            <div class="card-header">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-solid nav-tabs-rounded nav-justified" role="tablist">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="#solid-rounded-justified-tab1" data-bs-toggle="tab" aria-selected="true" role="tab">Home</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#solid-rounded-justified-tab2" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">Tasks</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#solid-rounded-justified-tab3" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">Attendance</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#solid-rounded-justified-tab4" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">Members</a></li>
                </ul>
                <div class="tab-content">
                    @await Html.PartialAsync("_HomePartialView",Model)
                    @await Html.PartialAsync("_TaskPartialView",Model.PaginationAssignments)
                    @await Html.PartialAsync("_AttendancePartialView",Model)
                    @await Html.PartialAsync("_MembersPartialView",Model.Students)
                </div>
            </div>

        </div>
    </div>


</div>

